<?xml version="1.0"?>
<sdf version="1.6">
  <model name="truck">
    <!-- Define a parameter for the scale -->
    <plugin name="xacro" filename="libgazebo_ros_xacro.so"/>
    <xacro:property name="scale_factor" value="6.0"/>

    <!-- Define a Base Link -->
    <link name="base_link">
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.001</iyy>
          <iyz>0.0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="base_link_connection" type="fixed">
      <parent>base_link</parent>
      <child>tractor</child>
      <pose>1.45 0 0 0 0 1.57</pose>
      <axis>
        <xyz>1 0 0</xyz>
      </axis>
    </joint>

    <!-- Tractor -->
    <link name="tractor">
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>1.0</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1.0</iyy>
          <iyz>0.0</iyz>
          <izz>1.0</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 ${scale_factor*0.25} 0 0 0</pose>
        <geometry>
          <box>
            <size>${scale_factor*0.5} ${scale_factor*0.5} ${scale_factor*0.5}</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Green</name>
          </script>
        </material>
      </visual>
      <collision name="collision">
        <pose>0 0 ${scale_factor*0.25} 0 0 0</pose>
        <geometry>
          <box>
            <size>${scale_factor*0.5} ${scale_factor*0.5} ${scale_factor*0.5}</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.0</mu>
              <mu2>0.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Trailer -->
    <link name="trailer">
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>1.0</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1.0</iyy>
          <iyz>0.0</iyz>
          <izz>1.0</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>-${scale_factor*0.75} 0 ${scale_factor*0.25} 0 0 0</pose>
        <geometry>
          <box>
            <size>${scale_factor*1} ${scale_factor*0.5} ${scale_factor*0.5}</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
      <collision name="collision">
        <pose>-${scale_factor*0.75} 0 ${scale_factor*0.25} 0 0 0</pose>
        <geometry>
          <box>
            <size>${scale_factor*1} ${scale_factor*0.5} ${scale_factor*0.5}</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.0</mu>
              <mu2>0.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Tractor-trailer Joint -->
    <joint name="hitch_joint" type="revolute">
      <parent>tractor</parent>
      <child>trailer</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
      <limit>
        <lower>-1.5708</lower>
        <upper>1.5708</upper>
        <effort>100.0</effort>
        <velocity>1.0</velocity>
      </limit>
      <dynamics damping="0.7"/>
    </joint>

    <!-- Joint Controller for Hitch Joint -->
    <transmission name="trans_hitch_joint">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="hitch_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="motor_hitch_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </model>
</sdf>
